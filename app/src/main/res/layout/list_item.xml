<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:background="#EEEEEE"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <ImageView
        android:id="@+id/listfoto"
        android:layout_width="150dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@tools:sample/avatars"/>
    <TextView
        android:id="@+id/listnama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="@id/listfoto"
        app:layout_constraintStart_toEndOf="@id/listfoto"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="JUDUL"
        android:textAllCaps="true"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/listdeskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="4"
        app:layout_constraintTop_toBottomOf="@id/listnama"
        app:layout_constraintStart_toEndOf="@id/listfoto"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="DESKRIPSI"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>